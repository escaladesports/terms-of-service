.termsContainer
	.termsInner
		include:markdown-it terms.md
	style.
		.termsContainer{
			background-color: rgba(0, 0, 0, .8);
			color: #fff;
			box-sizing: border-box;
			position: fixed;
			top: 0;
			right: 0;
			bottom: 0;
			left: 0;
			overflow-y: auto;
		}
		.termsContainer *{
			font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif;
			text-rendering: optimizeLegibility;
			box-sizing: inherit;
			color: #fff;
			line-height: 23px;
			font-size: 16px;
		}
		.termsInner{
			max-width: 960px;
			margin: 80px auto;
			padding: 0 30px;
		}
